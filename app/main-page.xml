<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded" class="page">

    <Page.actionBar>
        <ActionBar title="Recent {NS} Discussions" class="action-bar"/>
    </Page.actionBar>

    <GridLayout>
        <ListView id="listView" class="list-group" items="{{ threads }}">
            <ListView.itemTemplate>
                <GridLayout class="list-group-item" rows="auto" columns="auto, *">
                    <Image row="0" col="0" src="{{ thumbnail }}" class="thumb img-circle"/>
                    <Label row="0" col="1" text="{{ title }}" textWrap="true" class="list-group-item-heading"/>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <ActivityIndicator busy="{{ isLoading }}" class="activity-indicator"/>
    </GridLayout>

</Page>
